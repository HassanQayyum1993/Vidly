@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
This is a comment
    on multiple lines 
*@

@{
    var className = Model.Customers.Count > 1 ? "popular" : null;
}

<h1 class="@className">@Model.Movie.Name</h1>

@if (@Model.Customers.Count == 0)
{
    <text>No one has rented this movie.</text>
}
<ul>
    @foreach (var customers in @Model.Customers)
    {
        <li>@customers.Name</li>
    }
</ul>
