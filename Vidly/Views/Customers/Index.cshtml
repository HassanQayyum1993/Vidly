@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!@Model.Any())
{
    <p>We do not have a customer yet.</p>
}

else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Customer</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in @Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Details", new { customer.Id })</td>
            </tr>
        }
        </tbody>
    </table>
}